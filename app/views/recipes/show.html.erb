<div class="container py-6">
  <p>
    <strong>Title:</strong>
    <%= @recipe.title %>
  </p>

  <p>
    <strong>Content:</strong>
    <%= @recipe.content %>
  </p>

  <p>
    <% @recipe.recipe_ingredients.each do |rec_ing| %>
      <p>
        <%= rec_ing.amount %>
        <%= rec_ing.unit %>
        <%= rec_ing.ingredient_name %>
      </p>
    <% end %>
  </p>

  <% if can? :update, @recipe %>
    <%= link_to 'Edit', edit_recipe_path(@recipe) %> |
  <% end %>

  <%= link_to 'Back', recipes_path %>
</div>
