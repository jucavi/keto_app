<div class="row">
  <div class="col-lg-5 col-md-5 ml-auto mr-auto">
    <h2>Forgot your password?</h2>

    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= f.error_notification %>
      <br>
      <p class="text-left">Please enter your email address and we will send you a link to reset your password.</p>

      <div class="form-group">
        <%= f.input :email,
        required: true,
        autofocus: true,
        input_html: { autocomplete: "email" },
        class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.button :submit, "Send me reset password instructions", class: "btn btn-primary btn-block btn-lg" %>
      </div>
    <% end %>

    <div class="text-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
